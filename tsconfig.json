{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "declarationDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "typeRoots": [
            "node_modules/@types",
        ],
        "lib": [
            "es2017",
            "dom"
        ],
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
    "include": [
        "src/*", "src/helpers/Promise/promise-completion-source.ts"
    ]
}
